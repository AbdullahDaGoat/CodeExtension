{
  "manifest_version": 3,
  "name": "GPT-4o - Poe",
  "version": "1.0",
  "description": "Explore, create, and chat with AI on Poe.",
  "permissions": [
    "storage",
    "tabs",
    "commands"
  ], 
  "commands": {
    "open-extension": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "Open the extension"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}